# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# WhatsApp API Configuration (for production notifications)
VITE_WHATSAPP_ENABLED=true
VITE_WHATSAPP_API_URL=https://graph.facebook.com/v18.0/your_phone_number_id/messages
VITE_WHATSAPP_API_KEY=your_whatsapp_business_api_token
VITE_WHATSAPP_INSTANCE_ID=your_phone_number_id

# Email Service Configuration (using SendGrid, Mailgun, or similar)
VITE_EMAIL_ENABLED=true
VITE_EMAIL_API_URL=https://api.sendgrid.com/v3/mail/send
VITE_EMAIL_API_KEY=your_email_service_api_key
VITE_EMAIL_FROM_ADDRESS=noreply@yourlawfirm.com
VITE_EMAIL_FROM_NAME=Votre Cabinet d'Avocat

# SMS Service Configuration (optional)
VITE_SMS_ENABLED=false
VITE_SMS_API_URL=https://api.twilio.com/2010-04-01/Accounts/your_account_sid/Messages.json
VITE_SMS_API_KEY=your_sms_service_api_key

# Payment Gateway Configuration (for subscription payments)
VITE_PAYMENT_ENABLED=true
VITE_ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/dev/v1
VITE_ORANGE_MONEY_MERCHANT_KEY=your_orange_money_merchant_key
VITE_MOOV_MONEY_API_URL=https://api.moov-africa.com/v1
VITE_MOOV_MONEY_API_KEY=your_moov_money_api_key
VITE_WAVE_API_URL=https://api.wave.com/v1
VITE_WAVE_API_KEY=your_wave_api_key

# Application Configuration
VITE_APP_NAME=JURIS - Gestion de Cabinet d'Avocat
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@yourlawfirm.com
VITE_SUPPORT_PHONE=+221701234567

# Security Settings
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.txt

# Features Toggle
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_AUTOMATIC_BACKUP=true
VITE_ENABLE_AUDIT_LOGS=true
VITE_ENABLE_MULTI_LANGUAGE=false

# Monitoring and Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=your_analytics_id
VITE_ERROR_REPORTING_ENABLED=true
VITE_ERROR_REPORTING_DSN=your_sentry_dsn

# Development/Production Mode
NODE_ENV=production
VITE_DEBUG_MODE=false
